{
  "name": "michml",
  "description": "Use MJML and Nunjucks to generate your mail HTML. Michml le MJML par Michel",
  "version": "1.0.0",
  "keywords": [
    "template",
    "email",
    "html",
    "mjml"
  ],
  "repository": {
    "url": "https://github.com/damienmarchandfr/michml"
  },
  "main": "index.ts",
  "author": {
    "email": "damien-marchand@outlook.fr",
    "name": "Damien Marchand"
  },
  "contributors": [
    {
      "email": "jeremy@noemi.io",
      "name": "Jeremy Bensimon",
      "url": "https://github.com/jeremyben"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "mjml": "^4.2.0",
    "nunjucks": "^3.1.3"
  },
  "scripts": {
    "build": "rm -R ./dist && tsc",
    "example:ts": "ts-node ./examples/index.ts",
    "example:ts:write": "writeHTML=true ts-node ./examples/index.ts",
    "example:js": "node ./examples/index.js",
    "example:js:write": "writeHTML=true node ./examples/index.js"
  },
  "devDependencies": {
    "@types/mjml": "^4.0.1",
    "@types/nunjucks": "^3.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
